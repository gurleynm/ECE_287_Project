type GREEN is array (0 TO 12) of INTEGER;
type GREENI is array (0 TO 17) of INTEGER;
SIGNAL GVER:GREENI:=(OTHERS=>0);
SIGNAL GHOR:GREEN:=(OTHERS=>0);
FOR I IN 0 TO 12 LOOP
	GHOR(I)<=(I*30+575);
END LOOP;
FOR I IN 0 TO 17 LOOP
	GVER(I)<=(I*60);
END LOOP;


IF(SPOT((row-575)/30,column/60)='1' AND GHOR((row-575)/30)-1<row AND row<GHOR((row-575)/30+2) AND GVER(column/60)-1<column AND column<GVER(column/60+1)) THEN
	red<=(OTHERS=>'0');
	green<=(OTHERS=>'1');
	blue<=(OTHERS=>'0');
END IF;
